<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorAquaHaze</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorSilver</item>
        <item name="android:windowBackground">@color/colorAquaHaze</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>


    <!-- End of application theme. -->


    <!-- TextView styles. -->

    <style name="TextView.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextView.SemiBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextView.Toolbar" parent="TextView.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextView.Title.Section" parent="TextView.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.075</item>
    </style>

    <style name="TextView.Hint" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextView.Value" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextView.Label.Hint" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_label_hint</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/colorSilverChalice</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawableStart">@drawable/ic_baseline_warning_16</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/colorSilverChalice</item>
    </style>

    <style name="TextView.ToolbarTitle" parent="TextView.SemiBold">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- End of TextView styles. -->


    <!-- Button styles. -->

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/button_primary_color_selector</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="Button.Primary.Rounded" parent="Button.Primary">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">@color/colorBoulder</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Button.TextButton.Category" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.Icon.Close" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="icon">@drawable/ic_baseline_close_red_16</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">18dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!-- End of Button styles. -->


    <!-- Toolbar styles. -->

    <style name="AppBar.Default" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Toolbar.Default" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="titleTextAppearance">@style/TextView.Toolbar</item>
    </style>

    <!-- End of Toolbar styles. -->


    <!-- CardView styles. -->

    <style name="CardView.FilledBox" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorAquaHaze</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorGallery</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardView.BottomBar" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- End of CardView styles. -->

    <!-- Chip styles. -->

    <style name="Chip.Default" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/colorGallery</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- End Chip styles. -->


    <!-- TextInput styles. -->

    <style name="TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <!-- End TextInput styles. -->


    <!-- Bottom Sheet Modal styles -->

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Modal</item>
    </style>

    <style name="BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedTop</item>
    </style>

    <!-- End of Bottom Sheet Modal styles -->


    <!-- Dialog styles -->

    <style name="AppTheme.NoActionBar.FullScreenDialog" parent="AppTheme.FullScreen">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down_anim</item>
    </style>

    <!-- End of Dialog styles -->


    <!-- Shape appearances. -->

    <style name="ShapeAppearanceOverlay.RoundedTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- End of shape appearances. -->


    <!-- ProgressBar styles. -->

    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:progressBackgroundTint">@color/colorAccent</item>
    </style>

    <!-- End ProgressBar styles. -->
</resources>